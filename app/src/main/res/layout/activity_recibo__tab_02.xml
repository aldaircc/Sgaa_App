<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lyMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="6"
    tools:context=".ui.Recibo.Tab_02.Recibo_Tab_02Activity">

    <LinearLayout
        android:id="@+id/lySection01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/lightBlueHeader"
        android:orientation="vertical"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="2dp"
            android:paddingLeft="@dimen/paddingLeftGeneral"
            android:paddingRight="@dimen/paddingRightGeneral"
            android:paddingTop="2dp"
            android:weightSum="3">

            <TextView
                android:id="@+id/textView14"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_weight="1"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="Nro. Orden:"
                android:textColor="@color/yellowColor"
                android:textSize="@dimen/sizeMedium"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvNroOrden"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_weight="2"
                android:paddingLeft="5dp"
                android:text="xxxxxxxxxxxx"
                android:textColor="@color/whiteColor"
                android:textSize="@dimen/sizeMedium"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="1dp"
            android:paddingLeft="@dimen/paddingLeftGeneral"
            android:paddingRight="@dimen/paddingRightGeneral"
            android:paddingTop="1dp"
            android:weightSum="3">

            <TextView
                android:id="@+id/textView13"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="Cuenta:"
                android:textColor="@color/yellowColor"
                android:textSize="@dimen/sizeMedium"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvCuenta"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:layout_weight="2"
                android:paddingLeft="5dp"
                android:text="xxxxxxxxxxxx"
                android:textColor="@color/whiteColor"
                android:textSize="@dimen/sizeMedium"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="2dp"
            android:paddingLeft="@dimen/paddingLeftGeneral"
            android:paddingRight="@dimen/paddingRightGeneral"
            android:paddingTop="2dp"
            android:weightSum="3">

            <TextView
                android:id="@+id/textView12"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="Proveedor:"
                android:textColor="@color/yellowColor"
                android:textSize="@dimen/sizeMedium"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvProveedor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:layout_weight="2"
                android:paddingLeft="5dp"
                android:text="xxxxxxxxxxxx"
                android:textColor="@color/whiteColor"
                android:textSize="@dimen/sizeMedium"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lySection02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/skyBlueBackground"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:weightSum="1">

            <android.support.v7.widget.SearchView
                android:id="@+id/svDetail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:iconifiedByDefault="false"
                app:queryHint="Buscar ..." />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lySection03"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="6"
        android:orientation="vertical"
        android:weightSum="1">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rclDetailTx"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/whiteColor"
            android:paddingBottom="2dp"
            android:paddingLeft="@dimen/paddingLeftGeneral"
            android:paddingRight="@dimen/paddingRightGeneral"
            android:paddingTop="2dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lySection04"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/skyBlueBackground"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="2dp"
            android:paddingLeft="@dimen/paddingLeftGeneral"
            android:paddingRight="@dimen/paddingRightGeneral"
            android:paddingTop="2dp"
            android:weightSum="4">

            <TextView
                android:id="@+id/textView18"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="Total:"
                android:textColor="@color/blackColor"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvCountTx"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0"
                android:textColor="@color/blackColor" />

            <CheckBox
                android:id="@+id/chkAutomatic"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="right|center_vertical"
                android:text="VerificaciÃ³n automatica"
                android:textColor="@color/blackColor" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lySection05"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/skyBlueBackground"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="7">

            <Button
                android:id="@+id/btnBack"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/appbar_arrow_left" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/btnCausal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cerrar Rx" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/btnCloseTx"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Causal" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/btnNext"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/appbar_arrow_right" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lySection06"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">

        <Button
            android:id="@+id/btnOption"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="#32cd32"
            android:text="Opciones"
            android:textColor="@color/whiteColor"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>